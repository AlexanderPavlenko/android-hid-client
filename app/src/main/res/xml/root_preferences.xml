<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/misc_header">

        <SwitchPreference
            app:key="clear_manual_input"
            app:title="@string/clear_manual_input_title" />

        <SwitchPreference
            app:key="volume_button_passthrough"
            app:title="@string/volume_button_passthrough_title"
            app:summary="@string/volume_button_passthrough_summary" />

        <SwitchPreference
            app:key="create_character_device_on_boot"
            app:title="@string/automatically_create_character_device_title"
            app:summary="@string/automatically_create_character_device_summary" />

        <DropDownPreference
            app:defaultValue="Ask Every Time"
            app:entries="@array/default_error_action"
            app:entryValues="@array/default_error_action"
            app:key="issue_prompt_action"
            app:persistent="true"
            app:title="Error prompt behavior"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/debug_header">

        <SwitchPreference
            app:key="@string/debug_mode_key"
            app:title="@string/debug_mode_title"
            app:summary="@string/debug_mode_summary" />

        <Preference
            app:title="@string/export_debug_logs_btn_title"
            app:summary="@string/export_debug_logs_btn_summary"
            app:key="@string/export_debug_logs_btn_key" />

    </PreferenceCategory>
</PreferenceScreen>